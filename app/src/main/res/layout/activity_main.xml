<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/tony_stark"
        android:layout_margin="20dp"
        />

    <TextView
        android:id="@+id/txtname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tony Stark"
        android:textSize="18sp"
        android:layout_toRightOf="@id/img"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/txtemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tony@starkindustries.com"
        android:textSize="18sp"
        android:layout_toRightOf="@id/img"
        android:layout_below="@id/txtname"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="15dp"

        />

    <TextView
        android:id="@+id/txtphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1 902 818 345"
        android:layout_below="@id/txtemail"
        android:textSize="18sp"
        android:layout_toRightOf="@id/img"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textColor="#000000"
        />



    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgSteve"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/captainamerica"
                android:layout_margin="20dp"
                />

            <TextView
                android:id="@+id/txtnameSteve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Caption America"
                android:textSize="18sp"
                android:layout_toRightOf="@id/imgSteve"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/txtemailSteve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="steverogersamerica.com"
                android:textSize="18sp"
                android:layout_toRightOf="@id/imgSteve"
                android:layout_below="@id/txtnameSteve"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="15dp"

                />

            <TextView
                android:id="@+id/txtphonesteve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+1 902 818 395"
                android:layout_below="@id/txtemailSteve"
                android:textSize="18sp"
                android:layout_toRightOf="@id/imgSteve"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textColor="#000000"
                />



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgHulk"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/hulk"
                android:layout_margin="20dp"
                />

            <TextView
                android:id="@+id/txtnameHulk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hulk"
                android:textSize="18sp"
                android:layout_toRightOf="@id/imgHulk"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/txtemailHulk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hulkbanner.com"
                android:textSize="18sp"
                android:layout_toRightOf="@id/imgHulk"
                android:layout_below="@id/txtnameHulk"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="15dp"

                />

            <TextView
                android:id="@+id/txtphoneHulk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+1 902 818 295"
                android:layout_below="@id/txtemailHulk"
                android:textSize="18sp"
                android:layout_toRightOf="@id/imgHulk"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textColor="#000000"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgThor"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/thor"
                android:layout_margin="20dp"
                />

            <TextView
                android:id="@+id/txtnameThor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thor"
                android:textSize="18sp"
                android:layout_toRightOf="@id/imgThor"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/txtemailThor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="thoravenger.com"
                android:textSize="18sp"
                android:layout_toRightOf="@id/imgThor"
                android:layout_below="@id/txtnameThor"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="15dp"

                />

            <TextView
                android:id="@+id/txtphoneThor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+1 902 818 394"
                android:layout_below="@id/txtemailThor"
                android:textSize="18sp"
                android:layout_toRightOf="@id/imgThor"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textColor="#000000"
                />



        </RelativeLayout>
</LinearLayout>


</ScrollView>